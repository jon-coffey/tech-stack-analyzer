{
    "$schema": "../stack-analyzer-config.json",
    "properties": {
        "product": "My Product Name",
        "team": "Platform Engineering",
        "owner": "engineering@company.com",
        "environment": "production",
        "version": "1.2.3"
    },
    "exclude": [
        "node_modules",
        "vendor",
        "dist",
        "build",
        ".git",
        "*.log",
        "*.tmp",
        "**/__tests__/**",
        "**/*.test.js",
        "**/test/**"
    ],
    "techs": [
        {
            "tech": "aws",
            "reason": "Deployed on AWS ECS"
        },
        {
            "tech": "datadog",
            "reason": "Monitoring via Datadog"
        },
        {
            "tech": "auth0",
            "reason": "Authentication provider"
        },
        {
            "tech": "stripe",
            "reason": "Payment processing"
        }
    ],
    "scan": {
        "output_file": "results.json",
        "pretty": true,
        "aggregate": "techs,languages",
        "verbose": false,
        "debug": true,
        "no_code_stats": false,
        "component_code_stats": true,
        "trace_timings": false,
        "trace_rules": false,
        "filter_rules": [
            "nodejs",
            "python",
            "docker"
        ]
    }
}
